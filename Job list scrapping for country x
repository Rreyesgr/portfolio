import requests
from bs4 import BeautifulSoup
import json

headers = {
    "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"
}

url = "https://www.glassdoor.com/Job/jobs.htm?sc.keyword=data%20freelancer&locT=C&locId=1133891&locKeyword=CountryName"  # Replace CountryName with your target country

response = requests.get(url, headers=headers)

soup = BeautifulSoup(response.content, 'html.parser')

jobs = []

for job_elem in soup.findAll('li', class_='jl'):
    title = job_elem.find('div', class_='jobTitle').text.strip()
    description = job_elem.find('div', class_='jobDesc').text.strip()
    jobs.append({
        'title': title,
        'description': description
    })

# Saving the jobs data into a JSON file
with open('jobs.json', 'w') as f:
    json.dump(jobs, f)

print(f"Saved {len(jobs)} jobs to jobs.json")
